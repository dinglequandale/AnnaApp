<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_600"
    tools:context=".AddorEditShow">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="313dp"
        android:layout_height="474dp"
        app:cardBackgroundColor="@color/grey"
        app:cardCornerRadius="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="15dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/date2_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:text="Ending Date:"
                app:layout_constraintBottom_toBottomOf="@+id/edtDate2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/date1_add"
                app:layout_constraintTop_toBottomOf="@+id/date1_add"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/showName_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Show Name:"
                app:layout_constraintBottom_toBottomOf="@+id/edtShowName"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.068"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.952" />

            <TextView
                android:id="@+id/date1_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:text="Starting Date:"
                app:layout_constraintBottom_toBottomOf="@+id/edtDate1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/crewName_add"
                app:layout_constraintTop_toBottomOf="@+id/crewName_add"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/txtURL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:text="URL link:"
                app:layout_constraintBottom_toBottomOf="@+id/edtURL"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/date2_add"
                app:layout_constraintTop_toBottomOf="@+id/date2_add"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/crewName_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:text="Crew Name:"
                app:layout_constraintBottom_toBottomOf="@+id/edtCrewName"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/showName_add"
                app:layout_constraintTop_toBottomOf="@+id/showName_add"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/titleAddorEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/helveticaroundedbold"
                android:text="Add a Show"
                android:textSize="40dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.037" />

            <EditText
                android:id="@+id/edtShowName"
                android:layout_width="195dp"
                android:layout_height="44dp"
                android:layout_marginStart="14dp"
                android:ems="10"
                android:hint="Enter show name here"
                android:inputType="text"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.111"
                app:layout_constraintStart_toEndOf="@+id/showName_add"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.295" />

            <EditText
                android:id="@+id/edtDate1"
                android:layout_width="195dp"
                android:layout_height="44dp"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:hint="Enter starting date here"
                android:inputType="text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/date1_add"
                app:layout_constraintTop_toBottomOf="@+id/edtCrewName" />

            <EditText
                android:id="@+id/edtDate2"
                android:layout_width="195dp"
                android:layout_height="44dp"
                android:layout_marginTop="12dp"
                android:ems="10"
                android:hint="Enter ending date here"
                android:inputType="text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.652"
                app:layout_constraintStart_toEndOf="@+id/date2_add"
                app:layout_constraintTop_toBottomOf="@+id/edtDate1" />

            <EditText
                android:id="@+id/edtURL"
                android:layout_width="195dp"
                android:layout_height="44dp"
                android:layout_marginTop="12dp"
                android:ems="10"
                android:hint="Enter image URL here"
                android:inputType="text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.833"
                app:layout_constraintStart_toEndOf="@+id/txtURL"
                app:layout_constraintTop_toBottomOf="@+id/edtDate2" />

            <EditText
                android:id="@+id/edtCrewName"
                android:layout_width="195dp"
                android:layout_height="44dp"
                android:layout_marginTop="8dp"
                android:ems="10"
                android:hint="Enter crew name here"
                android:inputType="text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.692"
                app:layout_constraintStart_toEndOf="@+id/crewName_add"
                app:layout_constraintTop_toBottomOf="@+id/edtShowName" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/btnCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:text="Cancel"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.534"
        app:layout_constraintStart_toStartOf="@+id/guideline4"
        app:layout_constraintTop_toBottomOf="@+id/cardView2"
        app:layout_constraintVertical_bias="0.45" />

    <Button
        android:id="@+id/btnOk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:text="Ok"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/btnCancel"
        app:layout_constraintEnd_toStartOf="@+id/guideline4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btnCancel" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="205dp" />

</androidx.constraintlayout.widget.ConstraintLayout>